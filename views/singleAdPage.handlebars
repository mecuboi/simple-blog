<section class="bg-white dark:bg-gray-900">
  <div class="items-center mx-auto max-w-screen-xl md:grid p-6 bg-white rounded-lg border border-gray-200 shadow-md">
    <img class="w-full" src="{{petAds.image}}">
    <br>
    <div class="mt-4 md:mt-0">

      <h1 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">
        {{petAds.name}} ({{petAds.breed}}) 
        <button id="favourite-btn">
        <img class="inline-flex" src="https://img.icons8.com/parakeet/36/null/hearts.png"/>
        </button>
        </h1>
     
      <p>{{petAds.description}}</p>
      <br>
      <p><strong>Age:</strong> {{petAds.age}}</p>
      <p><strong>Microchip Number:</strong> {{petAds.microchip_number}}</p>
      <p><strong>Price:</strong> $ {{petAds.price}}</p>
      <br>
      <h3 class="mb-4 text-2xl tracking-tight font-extrabold text-gray-900 dark:text-white">Seller Details</h3>
      <a href="/profile/{{petAds.user.id}}"
        class="text-orange-500 font-bold text-lg underline">{{petAds.user.first_name}} {{petAds.user.last_name}}</a>
      <p id="seller-email">{{petAds.user.email}}</p>
      <p>{{petAds.user.phone_number}}</p>
      <br>
      <p class="mb-6 text-gray-500 text-sm">Ads Created: {{format_time petAds.date_created}} {{format_date
        petAds.date_created}}</p>
      {{#if correctUser}}
      <button type="button" id="delete-button"
        class="focus:outline-none text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-3 py-2.5 mr-2 mb-2">Delete
        Ad</button>
      {{else}}
      <button type="button" id="send-email"
        class="focus:outline-none text-white bg-orange-500 hover:bg-orange-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-3 py-2.5 mr-2 mb-2">Send
        an email</button>
      {{/if}}

    </div>
  </div>
</section>

{{!-- toast --}}
<div id="favourite-toast" class="hidden">
<div id="toast-success" class="absolute bottom-10 right-5 flex items-center p-4 mb-4 w-full max-w-xs text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800" role="alert">
    <div class="inline-flex flex-shrink-0 justify-center items-center w-8 h-8 text-green-500 bg-green-100 rounded-lg dark:bg-green-800 dark:text-green-200">
        <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
        <span class="sr-only">Favourites icon</span>
    </div>
    <div class="ml-3 text-sm font-normal">Added to favourites!</div>
    <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700" data-dismiss-target="#toast-success" aria-label="Close">
        <span class="sr-only">Close</span>
        <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
    </button>
</div>
</div>

<script src="/js/singlead.js"></script>
<script src="/js/email.js"></script>
<script src="./js/singleAdPage.js"></script>

