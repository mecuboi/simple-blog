<div class="">
  <!-- Container -->
  <div class="container mx-auto">
    <div class="flex  my-12">
      <!-- Row -->
      <div class="w-full lg:flex">
        <!-- Col -->
        <div class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg"
          style="background-image: url('https://source.unsplash.com/Mv9hjnEUHR4/600x800')"></div>
        <!--Col-->

        <div class="mx-auto h-auto container flex  lg:w-8/12" id="nav">
          <div class="w-full pt-2 p-4">

            <div class="w-full bg-white p-5 rounded-lg lg:rounded-l-none">
              <div class="flex flex-wrap">
                <h1 class="text-2xl text-orange-500 hover:text-orange-500 transition duration-500 p-4">
                  <i class="fas fa-sign-in-alt fa-fw fa-lg"></i>
                  Sign-in
                </h1>
              </div>

              <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <form class="login-form">
                  <div class="mb-8">
                    <label for="username" class="block text-gray-700 text-sm font-bold mb-2">
                      <span class="text-red-500">&nbsp;*</span>
                      Username
                    </label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                      <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke-linecap="round" stroke-linejoin="round"
                          stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
                          <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                      </div>
                      <input id="email-login"
                        class="block pr-10 shadow appearance-none border-2 border-orange-100 rounded w-full py-2 px-4 text-gray-700 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-orange-500 transition duration-500 ease-in-out"
                        placeholder="you@example.com" />
                    </div>
                    <strong class="text-red-500 text-xs italic">username is required</strong>
                  </div>

                  <div class="mb-8">
                    <label for="password" class="block text-gray-700 text-sm font-bold mb-2">
                      <span class="text-red-500">&nbsp;*</span>
                      Password
                    </label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                      <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke-linecap="round" stroke-linejoin="round"
                          stroke-width="2" stroke="currentColor" viewBox="0 0 24 24">
                          <path
                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                          </path>
                        </svg>
                      </div>
                      <input name="password" id="password-login" type="password"
                        class="block pr-10 shadow appearance-none border-2 border-orange-100 rounded w-full py-2 px-4 text-gray-700 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-orange-500 transition duration-500 ease-in-out">
                    </div>
                  </div>


                  <div class="mb-4 text-center">
                    <button
                      class="transition duration-500 bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                      type="submit">
                      Login {{logged_In}}
                    </button>
                  </div>
                  <hr>

                </form>


              </div>
            </div>
          </div>
        </div>

        <!-- Col -->
        <div class="w-full bg-white p-5 lg:w-9/12 rounded-lg lg:rounded-l-none">
          <h3 class="pt-4 text-2xl text-center">Create an Account!</h3>
          <hr>
          <hr>
          <form class="w-full max-w-lg p-5 signup-form">
            <div class="flex flex-wrap -mx-3 mb-3">
              <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
                  First Name
                </label>
                <input
                  class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                  id="user-first-name" type="text" placeholder="First Name">
                <p class="text-red-500 text-xs italic">Please fill out this field.</p>
              </div>
              <div class="w-full md:w-1/2 px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-last-name">
                  Last Name
                </label>
                <input
                  class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                  id="user-last-name" type="text" placeholder="Last Name">
              </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6">
              <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                  Password
                </label>
                <input
                  class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                  id="user-password" type="password" placeholder="******************">
                <p class="text-gray-600 text-xs italic">Make it as long and as crazy as you'd like</p>
              </div>
            </div>
            <div class="flex flex-wrap -mx-2 mb-6">
              <div class="w-full px-2">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                  Email address
                </label>
                <input
                  class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                  id="user-email-address" type="text" placeholder="***@**.com">
                <p class="text-gray-600 text-xs italic">It's going to be your username.</p>
              </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6">
              <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                  Mobile Number:
                </label>
                <input
                  class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                  id="user-phone-number" type="text" placeholder="04***********">

              </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6">
              <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-password">
                  Address:
                </label>
                <input
                  class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                  id="user-address" type="text" placeholder="Address">

              </div>
            </div>

            <div class="mb-4 text-center  flex justify-center px-12 py-5 mb-6">
              <button
                class="transition duration-500 bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                type="submit">
                Sign up
              </button>
            </div>
          </form>
          <hr>
        </div>
      </div>
    </div>
  </div>
</div>


<script src="/js/login.js"></script>