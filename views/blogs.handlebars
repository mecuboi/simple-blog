<div class=" bg-white border rounded-lg shadow-md md:mb-2 md:mx-2">
  <div class=" p-4 mb-2 bg-white rounded-lg md:p-8">
    <h2 class="mb-3 text-2xl font-extrabold tracking-tight text-gray-900 border border-red-400 py-8 px-2 rounded-lg">
      {{blog.title}}</h2>
    <p class="mb-3 text-gray-700 text-md content">{{blog.content}}</p>
    <p class="text-gray-400 text-sm my-10">Posted by: {{blog.user.first_name}} - {{format_date blog.date_created}}
      {{format_time blog.date_created}}</p>
      {{#if correctUser}}
    <a href="/updateblog/{{blog.id}}"><button
      class="transition duration-500 bg-red-300 hover:bg-red-500 text-white font-bold py-2 px-4 mt-2 w-full md:w-auto m rounded focus:outline-none focus:shadow-outline"
      type="submit" id="update-button" value="{{blog.id}}">
      Update Post
    </button></a>
    <br>
    <button
      class="transition duration-500 bg-red-700 hover:bg-red-500 text-white font-bold py-2 px-4 mt-6 w-full md:w-auto m rounded focus:outline-none focus:shadow-outline"
      type="submit" id="delete-button" value="{{blog.id}}">
      Delete Post
    </button>
    {{/if}}
  </div>
</div>

<p class="mt-10 ml-10 text-red-500 text-md">Comments:</p>

{{#each comments as |comment|}}
<div class="md:w-3/4 bg-white border rounded-lg shadow-md mt-5 md:ml-10">
  <div class="p-4 mb-1 bg-white rounded-lg">
    <p class="text-gray-500 text-sm pb-5">{{comment.user.first_name}} - {{format_date comment.date_created}}
      {{format_time comment.date_created}}</p>
    <p class="mb-3 text-gray-700 text-md content">{{comment.body}}</p>
    {{!-- {{#if user}}
    <button
      class="transition duration-500 bg-red-700 hover:bg-red-500 text-white font-bold py-2 px-4 mt-2 text-xs w-full md:w-auto m rounded focus:outline-none focus:shadow-outline"
      type="submit" id="comment-delete" value="{{comment.id}}">
      Delete
    </button>
    {{/if}} --}}
  </div>
</div>
{{/each}}

<form class="md:m-6" id="comment-form">
  <label for="large-input" class="block mb-2 text-sm font-medium text-red-500">Write your comment:</label>
  <input type="text" id="new-comment" placeholder="Type your comments here"
    class="block md:ml-5 px-4 pb-10 md:w-3/4 w-full text-gray-900 bg-gray-50 rounded-lg border border-gray-300 sm:text-md focus:ring-blue-500 focus:border-blue-500">
  <div class="px-4">
    <button
      class="transition duration-500 bg-red-300 hover:bg-red-500 text-white 
      font-bold py-2 px-4 mt-2 md:m-2 w-full md:w-auto m rounded focus:outline-none focus:shadow-outline"
      type="submit" id="blog-post" value="{{blog.id}}">
      Submit
    </button>
  </div>
</form>




<script src="/js/blogs.js"></script>